# .......................................................................... mpd

if ! [ -f $HOME/.config/beets/config.yaml ] ;then
  sed -e '/^directory:/cdirectory: /data/media/music' \
      -e '/^plugins:/cplugins: [mpdupdate]' \
      -e '/^ui:/i\
mpd:\
    host: localhost\
    port: 6600\
    password:\
' /usr/lib/python2.7/site-packages/beets/config_default.yaml >$HOME/.config/beets/config.yaml
fi

