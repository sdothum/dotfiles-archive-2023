# .......................................................................... zsh

sudo ln -sfv $HOME/.zsh /root/
sudo ln -sfv $HOME/.zshenv /root/
sudo ln -sfv $HOME/.zshrc /root/

sudo chsh -s /usr/bin/zsh root

