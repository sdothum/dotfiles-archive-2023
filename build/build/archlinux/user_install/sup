# .......................................................................... sup

# ez yang patch for more comprehensive contacts lookup
module=$(find /usr/lib/ruby/gems -path '*gems*/sup-*/lib/sup/buffer.rb')
if grep -q 'user_emails, :num => 10)' $module ;then
  original -f $module
  sudo sed -i '/user_emails, :num =>/s/10/200/' $module
fi

