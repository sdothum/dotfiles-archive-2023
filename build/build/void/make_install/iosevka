# ...................................................................... iosevka

# Usage: make_install iosevka [kindle | kobo | I-serifless | d-tailed | q-curly] | <opions>*

MAKE_INSTALL=/tmp/iosevka:make_install
touch $MAKE_INSTALL
shift

while [ $1 ] ;do
  case $1 in
  ''         ) ;;
  I-serifless) flavour=I-serifless ;;  # source code variant
  d-tailed   ) d=d-tailed ;;           # ebook variant
  q-curly    ) q=q-curly ;;            # ebook variant
  kindle     ) ereader=$1 ;;
  kobo       ) ereader=$1; q=q-curly ;;
  *          ) . $HOME/bin/functions/font/iosevka $@; rm -f $MAKE_INSTALL; exit ;;
  esac
  shift
done

# build font suite
ifno 'build iosevka font suite' && { rm -f $MAKE_INSTALL; exit; }

update() {
  fonts='*-book *-bookitalic *-bold *-bolditalic'
  cd $HOME/.fonts/$2

  for i in $fonts ;do
    file=$i.ttf
    folder=$STOW/$ereader/fonts/$1
    mkdir -p $folder
    cp -v $file $folder/
  done
}

if [ $ereader ] ;then
  iosevka dyslexic $ereader english $q
  update p-serifed eMonolexic
  iosevka dyslexic $ereader english d-tailed $q
  update d-tailed eMonolexic
  iosevka dyslexic $ereader english I-serifless d-tailed $q
  update d-tailed iMonolexic
  iosevka dyslexic $ereader english I-serifless $q
  update p-serifed iMonolexic
  iosevka dyslexic $ereader english I-serifless $q family Monolexic  # my monolexic default settings
  update '' Monolexic
else
  # desktop fonts
  iosevka expanded $flavour $d $q
  iosevka expanded proof $flavour $d $q
  iosevka expanded menu $flavour $d q-curly

  # www fonts
  iosevka heading english I-serifless q-curly
  iosevka dyslexic english I-serifless q-curly kobo webfont

  # e-reader fonts
  iosevka ebook english d-tailed $q
  iosevka ebook english I-serifless $q
  iosevka ebook english quasi-proportional d-tailed $q
  iosevka ebook english quasi-proportional I-serifless $q
  iosevka dyslexic english quasi-proportional d-tailed $q
  iosevka dyslexic english quasi-proportional I-serifless $q
fi
rm -f $MAKE_INSTALL

# vim: set ft=sh: #
