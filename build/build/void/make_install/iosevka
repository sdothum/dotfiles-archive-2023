# ...................................................................... iosevka

# Usage: make_install iosevka [I-serifless | d-tailed | q-curly] | <opions>*

MAKE_INSTALL=/tmp/iosevka:make_install
touch $MAKE_INSTALL
shift

while [ $1 ] ;do
  case $1 in
  ''         ) ;;
  I-serifless) flavour=I-serifless ;;  # source code variant
  d-tailed   ) d=d-tailed ;;           # ebook variant
  q-curly    ) q=q-curly ;;            # ebook variant
  *          ) . $HOME/bin/functions/font/iosevka $@; rm -f $MAKE_INSTALL; exit ;;
  esac
  shift
done

# build font suite
ifno 'build iosevka font suite' && { rm -f $MAKE_INSTALL; exit; }

# desktop fonts
iosevka expanded $flavour $d
iosevka expanded proof $flavour $d
iosevka expanded menu $flavour $d

# www fonts
iosevka heading english d-tailed
iosevka heading english I-serifless

# e-reader fonts
iosevka ebook english d-tailed $q
iosevka ebook english I-serifless $q
iosevka ebook english atkinson $q
iosevka ebook english quasi-proportional d-tailed $q
iosevka ebook english quasi-proportional I-serifless $q
iosevka dyslexic english d-tailed $q
iosevka dyslexic english I-serifless $q
iosevka dyslexic english quasi-proportional d-tailed $q
iosevka dyslexic english quasi-proportional I-serifless $q
rm -f $MAKE_INSTALL

# vim: set ft=sh: #
