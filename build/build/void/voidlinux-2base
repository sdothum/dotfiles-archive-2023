#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# install base packages


# ./voidlinux-wireless
# service enable dbus
# service enable connmand


title "setup"
# ══════════════════════════════════════════════════════════════════════════════
pong || post_install connman
# default mail addresses
config_install L /etc/aliases


heading 'enable tty autologin'
# ══════════════════════════════════════════════════════════════════════════════
# sudo cp -Rv /etc/sv/agetty-tty1 /etc/sv/agetty-autologin-tty1
autologin() {
  cat <<EOF
GETTY_ARGS="--autologin $USER --noclear"
BAUD_RATE=38400
TERM_NAME=linux
EOF
}
# autologin | sudo tee /etc/sv/agetty-autologin-tty1/conf


title "update base"
# ══════════════════════════════════════════════════════════════════════════════
xbps-query -Rs void-repo
sudo xbps-install void-repo-nonfree
sudo xbps-install -Syu
bundle_install $HOME/build/void/bundle/[0]*


title "installation errors:"
# ══════════════════════════════════════════════════════════════════════════════
grep '> \(ERROR\|WARNING\)' $HOME/typescript

ditto 'exit console (script)'
ditto 'login to tty2'
ditto run 'autologin tty1'
ditto 'switch back to tty1'
ditto run 'startx (x)'
ditto run 'voidlinux-3apps'

# vim: set ft=sh: #
