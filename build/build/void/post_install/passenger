# ........................................................................ nginx

[ -e /opt/nginx/conf/nginx.conf ] && mv -f /opt/nginx/conf/nginx.conf /opt/nginx/conf/nginx.conf.original
sudo -E passenger-install-nginx-module

cfg_install /etc/sv/nginx
ditto run "service enable nginx"

