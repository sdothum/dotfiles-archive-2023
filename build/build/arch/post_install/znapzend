# ..................................................................... znapzend

# simple daily backup of pools
znapzendzetup create --sudo --recursive \
                     SRC '1week=>1hour,1month=>1day,1year=>1week' pool \
                     DST '1week=>1hour,1month=>1day,1year=>1week' tank

service enable znapzend

