# ...................................................................... php-fpm

original /etc/php/php-fpm.conf
sudo sed -i -e '/request_terminate_timeout/s/=.*/= 300/' \
         -e '/request_terminate_timeout/s/;//' \
         /etc/php/php-fpm.conf

if server ;then
  systemd enable php-fpm
  systemd restart nginx
fi

