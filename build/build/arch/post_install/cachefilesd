# .................................................................... nfs cache

sudo mkdir /var/cache/fscache
original /etc/fstab
ifnsed /etc/fstab 'nfs4.*fsc' '/\(Maildir\|stow\).*nfs4/s/soft/soft,fsc/'
service enable cachefilesd

