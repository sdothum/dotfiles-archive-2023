# ................................................................... virtualbox

sudo modprobe -a vboxguest vboxsf vboxvideo
echo 'vboxguest
vboxsf
vboxvideo' | sudo tee /etc/modules-load.d/virtualbox.conf

# sudo groupadd vboxsf
sudo gpasswd -a $USER vboxsf
service enable vboxservice

ls -l /media/sf_*
VBoxClient-all

