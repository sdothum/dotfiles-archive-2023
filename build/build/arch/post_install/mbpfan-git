# .............................................................. macbook pro fan

sudo modprobe applesmc
sudo modprobe coretemp
echo applesmc | sudo tee /etc/modules-load.d/applesmc.conf
echo coretemp | sudo tee /etc/modules-load.d/coretemp.conf
service enable mbpfan

