[ $TRACE ] && CHILD="toggle/plover $@" . $PARENT

# herbstluftwm
# ══════════════════════════════════════════════════════════════════════════════

# ................................................................ Toggle plover

if pgrep -f '.*python.*plover.*' >/dev/null ;then
  pkill -KILL -f '.*plover.*' 2>/dev/null
else
  plover
fi

