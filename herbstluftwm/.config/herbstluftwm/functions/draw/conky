# ................................................................ Refresh conky

# reload .conkyrc (herbstluftwm spawn to avoid interactive shell hanging, see draw root)
cpu arm && exit
pkill -TERM -f '/usr/bin/conky' >/dev/null 2>&1
[ -e $CONKY ] && herbstclient spawn conky

