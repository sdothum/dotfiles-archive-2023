# ............................................................... Instance winid
usage() {
  echo "usage: focus $(basename $0) <instance>"
  exit 1
}

[ $1 ] || usage

for i in $(query winids) ;do herbstclient compare clients.$i.instance = $1 && { echo $i ; winid=true ;} ;done
[ $winid ] || echo ''

