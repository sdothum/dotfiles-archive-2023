[ $TRACE ] && CHILD="restore/window $@" . $PARENT

# herbstluftwm
# ══════════════════════════════════════════════════════════════════════════════

# ............................................................... Restore window

# smart restore window
client=$(herbstclient dump "'$TAG" | cut -d' ' -f3- | sed -r 's/(.* )*([0-9a-z]*)[)]/\2/')
if [ $client ] ;then
  focus frame
  herbstclient bring $client
fi

