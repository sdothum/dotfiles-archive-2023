#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl
# [ $TRACE ] && CHILD="bin/asciititle $@" . $PARENT

# herbstluftwm
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# ................................................................. Filter utf-8

# Usage: asciititle <string>

# convert and cleanup title string, see draw panel and focus hlwm
echo $@ | iconv -c -f utf-8 -t ascii |
          sed -re '/\(.*\).*VIM/s|(.*) \(.*/([^/]*/[^()]*)\).*|\2/\1|' \
              -e 's/[(][^)]*[)] //' \
              -e 's/[[][^]]*[]] //' \
              -e 's|https*://.*/(.*)([?].[=].*)+|\1|' \
              -e 's/ at .*//'

# vim: set ft=sh: #
