# ........................................................ Persistent lock state

# Usage: unlock [<command> [ . <command> ]*], multiple commands chained with dot

# restore dynamic emithook focusing
[ $1       ] && herbstclient chain . $@ . unlock || herbstclient unlock
[ -e $LOCK ] && rm -f $LOCK

