#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl
[ $TRACE ] && CHILD="bin/randcolor $@" . $PARENT

# herbstluftwm
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# ................................................................. Random color

usage() {
  echo "usage: $(basename $0) ['#'], '#' to prepend"
  exit 1
}

[ $1 ] && [ $1 != '#' ] && usage
echo "$1$(od -An -N3 -x /dev/random | sed 's/ 00// ; s/ //')"

# vim: set ft=sh: #
