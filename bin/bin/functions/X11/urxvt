# ..................................................................... Terminal

export SHELL=/usr/bin/fish

font="xft:$MONOFONT:size=$(fontsize)"

# URxvt client/server
pstat urxvtd || urxvtd -q -o -f 2>/tmp/urxvt.log
eval urxvtc -fn $font $@

