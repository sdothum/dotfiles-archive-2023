# zfs filesystem disk usage stat
usage() { echo "usage: $(basename $0) zfs pool"; exit 1; }

[ $1 ] || usage

# percent used
zpool list $1 | tail -1 | sed -r 's/.* ([0-9]*)% .*/\1/'

