# Log
# ══════════════════════════════════════════════════════════════════════════════

# ${COLORS} defined in env

# ......................................................................... Date

day() { [ $(date '+%p') = PM ] && cat || tr '[:upper:]' '[:lower:]'; }  # (AM) day (PM) Day

# common date string for consistent script logging
ditto $(date "+%a" | day) "${__TURQUOISE}$(date "+%-I %M'%S\"")"

# vim: set ft=sh: #
