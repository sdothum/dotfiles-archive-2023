#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# X11 Demo
# ══════════════════════════════════════════════════════════════════════════════

# ......................................................................... Demo

# Playback format:
#   # comment
#   ! command (some xdotool key triplets are problematic)
#   xdotool key command (everything else)

TRACE=true
DELAY=1.5

# demo key sequence playback
PLAYBACK='
  alt+bracketright
  alt+4
  # alt+Shift+Return
  ! term 'Termimal'
  slash d a t a slash d e p o t slash c o l o r t e s t s slash p i p e s space minus h Return
  alt+Shift+space
  alt+Shift+space
  alt+h
  alt+h
  alt+h
  # alt+Shift+h  # all Return
  ! restore hidden
  alt+w
  alt+w
  alt+w
  alt+bracketleft
'

# vim: set ft=sh: #
