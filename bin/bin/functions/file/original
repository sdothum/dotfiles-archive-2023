# ......................................................... Distribution install

# replace previous original?
if [ $1. = -f. ] ;then
  file=$2
  sudo rm -f $file.original 2>/dev/null
else
  file=$1
fi
[ -e $file.original ] && exit 1

# save distribution original
if [ -e $file ] ;then
  echo ".. copying $(sudo cp -pRv "$file" "$file.original")"
  exit 0
fi
exit 1

# vim: set ft=sh: #
