# File
# ══════════════════════════════════════════════════════════════════════════════

# ......................................................................... Copy

# replace previously saved?
[ -e "$1.save" ] && { ifyes "overwrite \"$1.save\"" || exit 1; }
[ -e "$1"      ] && { ditto copy "$(sudo cp -Rv "$1" "$1.save")"; exit 0; }
exit 1

