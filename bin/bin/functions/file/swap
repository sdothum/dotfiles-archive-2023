#!/usr/bin/dash

# File
# ▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬

# ......................................................................... Copy

# file and directory swapping
if [ $# -eq 2 ] ;then
  target=${1%/}
  destination=${2%/}
  hold=$RANDOM.$target
  if ( [ -e $target ] && [ -e $destination ] ) \
  || ( [ -d $target ] && [ -d $destination ] ) ;then
    mv $target $hold
    mv $destination $target
    mv $hold $destination
    echo ".. $target  --> <--  $destination"
  fi
else
  echo '.. swap file1 file2'
fi

# vim: set ft=sh: #
