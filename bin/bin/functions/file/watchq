#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# File
# ══════════════════════════════════════════════════════════════════════════════

# ............................................................... watchman queue

usage() { echo "usage: $(basename $0) d'irectory | f'ile <path> <name> <file>*"; exit 1; }

[ $# -lt 4 ] && usage
case $1 in
d) dir=$1; shift ;;
f) shift ;;
*) usage ;;
esac

# watchman
ROOT=$1; shift
NAME=$1; shift

WATCH=$CACHEDIR/$NAME
VERBOSE=$SESSION/$NAME:verbose
LOG=/tmp/$NAME.log

info() {
  trace "$1 ${ROOT##*/}" "$name" >>$LOG
  [ -e $VERBOSE ] && notify X "$1 ${ROOT##*/}" "$name"
}

for i in $@ ;do
  [ -n "$i" ] || continue
  name=$(echo $i | exclude)
  [ -n "$name" ] && [ -e "$ROOT/$i" ] || continue
  [ $dir ] && file="$ROOT/${i%/*}" || { file="$ROOT/$i"; [ -d "$file" ] && continue; }
  info Register
  grep -qx "$file" $WATCH || echo "$file" >>$WATCH
done

# vim: set ft=sh: #
