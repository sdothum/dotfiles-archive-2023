#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# File
# ══════════════════════════════════════════════════════════════════════════════

# ................................................................. ebook folder

usage() { echo "usage: $(basename $0) mobi | epub | <ebook>, from current directory"; exit 1; }

case "$@" in
  mobi ) find -maxdepth 1 -name '*.mobi' -exec addbooks {} \; ;;
  epub ) find -maxdepth 1 -name '*.epub' -exec addbooks {} \; ;;
  
  *mobi  |\
  *epub) author=$(echo "$@" | sed -r 's/.* - (.*)\.(mobi|epub)/\1/')
         mkdir -pv "$author" || exit 1
         mv -v "$@" "$author" ;;
  
  *    ) usage ;;
esac

# vim: set ft=sh: #
