#!/usr/bin/bash
# sdothum - 2016 (c) wtfpl

# UI
# ══════════════════════════════════════════════════════════════════════════════

# ..................................................................... Negative

sig=${sig:--TERM}
attn=${STRIKETHROUGH}${YELLOW}  # grab attention

# if no || ..
underline $attn$@

while : ;do
  printf 'continue? [No]/yes/abort : '
  # using bash's extended read functionality (over dash) for single character input
  IFS= read -rn1 CONTINUE
  echo
  case $CONTINUE in
    ''  ) exit 0 ;;
    [nN]) exit 0 ;;
    [yY]) exit 1 ;;
    [aA]) { kill $sig ${TMPPID:-$PPID}; break; } ;;  # see tmout
  esac
done

# vim: set ft=sh: #
