# standardized terminal prompt
[ $1 ] && cue="$@" || cue="to continue"
echo
echo "${__YELLOW}━━━━━━━━━  Press [Enter] $cue  ━━━━━━━━━${NOCOLOR}\n"
read CONTINUE

