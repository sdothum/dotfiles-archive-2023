# .......................................................... the darnedest thing

usage() { echo "usage: $(basename $0) [<thread>]"; exit 1; }

switch tag $WIKI
# vim config rule for vimwiki requires being in home directory
cd $HOME
thread=${1:-colophon}
focus v --role thedarnedestthing $HOME/vimwiki/$thread/index.wiki

#  vim: set ft=sh: #
