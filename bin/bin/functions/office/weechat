# ..................................................................... IRC chat

timeout=180
log=/tmp/weechat.log

# wait for znc to establish connections
# connections = irc servers X (times) 2, e.g. freenode + rizon = 4
if pgrep 'znc' >/dev/null ;then
  echo '.. launching weechat'
  echo '.. waiting for ZNC server connections to complete'

  count=0
  while :
  do
    [ $(sudo ss -apt | grep 'znc' | grep 'ESTAB' | wc -l) -ge 4 ] && break
    sleep 1
    count=$(( $count + 1 ))
    if [ $count -ge $timeout ] ;then
      notify "Weechat" "$timeout second ZNC server IRC timeout"
      exit
    fi
  done

  notify "Weechat" "$count seconds to ZNC server IRC connection"
  /usr/bin/weechat
else
  echo '.. znc server not running'
fi

# vim: set ft=sh: #
