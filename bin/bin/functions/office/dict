# ................................................................... Dictionary

usage() { echo "usage: $(basename $0) [-t] <word>"; exit 1; }

dict() { /usr/bin/dict $1 | sed '/^.*Moby Thesaurus/,$d' | grep -v 'Moby Thesaurus'; }

case $1 in
'') usage ;;
-t) [ $2 ] && { dict $2; ditto thesaurus "$2"; th $2; } || usage ;;
* ) dict $1 ;;  # chop thesaurus
esac

