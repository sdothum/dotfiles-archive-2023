#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Office
# ══════════════════════════════════════════════════════════════════════════════

# ........................................................ hyperlegible q update

# Usage: fforge_hyperlegible [family]

# see make_insstall iosevka
ditto iosevka 'copy char 0u024b and paste to char 0u0071'
ifno 'atkinson q update' && exit

FONT=$HOME/.fonts/iosevka
[ $1 ] && { family=-$1; FONT=$FONT-$1; }
echo "
Open(\$1);
Select(0u024b);
Copy();
Select(0u0071);
Paste();
Generate(\$1);
" >/tmp/fontforge.script
cd $FONT

for i in *ttf ;do
  ditto fontforge $i
  fontforge --script /tmp/fontforge.script $i 2>/dev/null
done

# vim: set ft=sh: #
