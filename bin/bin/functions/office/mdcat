#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Office
# ══════════════════════════════════════════════════════════════════════════════

# ................................................................. markdown cat

usage() { echo "usage: $(basename $0) [-<width>] [-nocolor] <file> "; exit 1; }

while [ "$1" ] ;do
  case $1 in
  -[0-9]* ) width=${1#?} ;;
  -nocolor) nocolor=true ;;
  *       ) [ -e "$@" ] && file="$@" || usage ;;
  esac
  shift
done

md() { lowdown -t term  --term-columns=${width:-55} "$file"; }

[ $nocolor ] && md | nocolor || md

# vim: set ft=sh: #
