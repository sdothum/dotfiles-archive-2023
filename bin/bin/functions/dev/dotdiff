#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Dev
# ══════════════════════════════════════════════════════════════════════════════

# ......................................................... Revision differences

usage() { echo "usage: $(basename $0) [checkout <commit>] [-b] <package> [folders]"; exit 1; }

# diff current sources with dotfiles git repo
dotfiles=${dotfiles:-/net/depot/dotfiles}
current=$STOW
[ -d $dotfiles ] || git clone git@github.com:sdothum/dotfiles.git $dotfiles

while : ;do
  case $1 in
  checkout) cd $dotfiles
            git pull
            git checkout $2
            shift 2
            nosync=true ;;

  -b      ) w=$1; shift ;;
  *       ) break ;;
  esac
done


[ $1          ] || usage
[ -d $STOW/$1 ] || usage
[ -z $nosync  ] && { ifno "sync $dotfiles repo" || (cd $dotfiles && git pull); }

dirdiff $w $current/$1 $dotfiles/$1 "$2"

# vim: set ft=sh: #
