# Shell
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# .................................................................... Processes

usage() {
  echo "usage: [sig=<signal>] $(basename $0) <regex>"
  exit 1
}


sig=${sig:--TERM}

# quick kill!
if [ "$*" ] ;then
  if p $@ | grep -v "$0" ;then
    pids=$(p $@ | grep -v "$0" | awk '{ print $2 }')
    if-yes "kill /$@/ $pids" && sudo kill $sig $pids
  fi
fi

# vim: set ft=sh: #
