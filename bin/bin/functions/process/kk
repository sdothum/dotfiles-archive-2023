#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Process
# ══════════════════════════════════════════════════════════════════════════════

# ......................................................................... Kill

usage() { echo "usage: $(basename $0) [sig=<signal>] <name>.."; exit 1; }

case $1 in
sig=*) eval $1; shift ;;
    *) sig=${sig:--TERM} ;;
esac

# quick kill processes by name
if [ $1 ] ;then
  if p $@ | grep -v $0 ;then
    pids=$(p $@ | grep -v $0 | awk '{ print $2 }')
    ifyes "kill /$@/ $pids" && sudo kill $sig $pids
  fi
fi

# vim: set ft=sh: #
