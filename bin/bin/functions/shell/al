usage() { echo "usage: $(basename $0) [-w] <regex>"; exit 1; }

[ "$1"      ] || usage
[ "$1" = -w ] && { w=-w; shift; }

# pass parms via env
AG="$w -l --nocolor --silent" a "$@"

