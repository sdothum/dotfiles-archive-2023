#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Shell
# ══════════════════════════════════════════════════════════════════════════════

# ................................................................. Visual timer

usage() { echo "usage: $(basename $0) <seconds> | <test>"; exit 1; }

trap 'echo && exit 1' 2

[ "$1" ] || usage

if echo "$@" | grep -q '^[0-9]*$' ;then
  for i in $(seq 1 $1) ;do echo -n .; sleep 1; done
else
  while ! $@ >/dev/null 2>&1 ;do echo -n .; sleep 1; done
fi
echo

# vim: set ft=sh: #
