# ........................................................... Package management

usage() {
  echo "usage: $(basename $0) [<package>]"
  exit 1
}

[ "$1" = h ] && usage

# package history
ph() {
  egrep '\[ALPM\] (installed|reinstalled|upgraded)' /var/log/pacman.log
}

[ "$*" ] && ph | grep "$@" || ph

# vim: set ft=sh: #
