# Package
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# ........................................................... Package management

usage() {
  echo "usage: $(basename $0)  'depends on <package> | n'o dependencies | r'equired by <package>"
  exit 1
}

case $1 in
  '' | h) usage ;;

  r) D=N
     shift
     dep='required by' ;;

  n) pacman -Qet
     exit ;;

  *) D=D
     dep='depends on' ;;
esac

# package dependency
if [ "$*" ] ;then
  for i in $@
  do
    if [ "$(expac '%n' $i)" ] ;then
      # list source repository
      echo "$(expac -S '%r/%n' $i) ($dep)$(expac "%$D" $i | sed 's/  */\n/g' | sort | sed 's/^/^/')" | column -s^ -t
    else
      echo ".. \"$i\" not found"
    fi
  done
fi

# vim: set ft=sh: #
