# Package
# ▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬

# ........................................................... Package management

usage() {
  echo "usage: $(basename $0) [ core | extra | community | .. ]"
  exit 1
}

[ "$1" = h ] && usage

# packages installed
[ "$*" ] && repo="$@" || repo=core
for i in $(expac -S '%r/%n' | grep "^$repo")
do
  # installed if description listed
  echo "$i^$(expac '%d' ${i#*/})"
done | column -s^ -t

# vim: set ft=sh: #
