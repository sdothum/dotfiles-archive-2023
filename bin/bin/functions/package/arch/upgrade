#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Package
# ══════════════════════════════════════════════════════════════════════════════

# ........................................................... Package management

usage() { echo "usage: $(basename $0) <package>*"; exit 1; }

conf=/etc/pacman.conf

if [ -z $1 ] ;then
  grep '^ *IgnorePkg.*' $conf
  usage
fi

for i in $@ ;do
  grep -q "^ *IgnorePkg.*$i" $conf && sudo sed -i "/^ *IgnorePkg.*$i/s/ $i//" $conf
  pm S $i
done

# vim: set ft=sh: #
