#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Package
# ══════════════════════════════════════════════════════════════════════════════

# ........................................................... Package management

usage() { echo "usage: $(basename $0) [<package>]"; exit 1; }

[ "$1" = help ] && usage

# package history
ph() { egrep '\[ALPM\] (installed|reinstalled|upgraded)' /var/log/pacman.log; }

[ $1 ] && ph | grep "$@" || ph

# vim: set ft=sh: #
