gem list
ditto version "$(ruby --version)"
ifno 'update gems' && return

# pull gem list from framework bundle install
gems=$(cat $HOME/build/void/bundle/220-framework | grep -v '^ *#' | grep ' g ' | sed -r 's/.* g ([^ ]*) *.*/\1/')
for i in $gems ;do gem_update $i ;done 

