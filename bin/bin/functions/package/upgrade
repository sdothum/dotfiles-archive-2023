# Package
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# ........................................................... Package management

usage() {
  echo "usage: $(basename $0) <package>*"
  exit 1
}

conf=/etc/pacman.conf

if [ -z "$*" ] ;then
  grep '^ *IgnorePkg.*' $conf
  usage
fi

for i in $@
do
  if grep -q "^ *IgnorePkg.*$i" $conf ;then
    sudo sed -i "/^ *IgnorePkg.*$i/s/ $i//" $conf
  fi
  pm S $i
done

# vim: set ft=sh: #
