#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Mail
# ══════════════════════════════════════════════════════════════════════════════

# ........................................................................ Query

usage() { echo "usage: $(basename $0) c'c | f'rom | s'ubject | t'o"; exit 1; }

# scan unknown mail
unknown=$HOME/Maildir/$(cat $HOME/.forward | cut -d@ -f1)/unknown

case $1 in
# c*) ack '^Cc:' $unknown/* | sed -r 's/.*C[Cc]: *(.*)/\1/' | sort | less ;;
# f*) ack '^From:' $unknown/* | sed -r 's/.*From: *(.*)/\1/' | sort | less ;;
# s*) ack '^Subject:.*\[.*\]' $unknown/* | sed -r 's/.*Subject: *(.*)/\1/' | sort | less ;;
# t*) ack '^To:' $unknown/* | sed -r 's/.*To: *(.*)/\1/' | sort | less ;;
c*) /usr/bin/rg --ignore-case '^Cc:' $unknown/* | sed -r 's/.*C[Cc]: *(.*)/\1/' | sort | less ;;
f*) /usr/bin/rg --ignore-case '^From:' $unknown/* | sed -r 's/.*From: *(.*)/\1/' | sort | less ;;
s*) /usr/bin/rg --ignore-case '^Subject:.*\[.*\]' $unknown/* | sed -r 's/.*Subject: *(.*)/\1/' | sort | less ;;
t*) /usr/bin/rg --ignore-case '^To:' $unknown/* | sed -r 's/.*To: *(.*)/\1/' | sort | less ;;
* ) usage ;;
esac

# vim: set ft=sh: #
