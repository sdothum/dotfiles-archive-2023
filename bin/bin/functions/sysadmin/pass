#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Sysadmin
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# ..................................................................... Password

usage() {
  echo "usage: $(basename $0)  <name> | a'dd <name> <password> | e'xport | G|g'enerate <name> | I'nitialize | i'mport | l'ist | m'v <name> <'name> | R'm <name>"
  exit 1
}

store=${PASSWORD_STORE_DIR-$HOME/.password-store}

# password manager
case $1 in
  '') usage ;;

  a*) if [ $# -eq 3 ] ;then
        echo "$3\n$3" >/tmp/pass
        /usr/bin/pass insert --force $2 </tmp/pass
        pass $2
      else
        usage
      fi ;;

  e*) echo "#!/usr/bin/dash
pass I || exit" >$HOME/sandbox/pass.sh
      names=$(find $store -name '*.gpg' | sed -e "s|$store/||g" -e 's/.gpg$//')
      for i in $names
      do
        ditto "exporting $i"
        key=$(/usr/bin/pass $i | sed "s/'/'\"'\"'/")
        echo "pass ! $i '$key'" >>$HOME/sandbox/pass.sh
      done
      echo "if-yes 'purge this pass import script' && rm -f pass.sh" >>$HOME/sandbox/pass.sh
      chmod -c 700 $HOME/sandbox/pass.sh
      annotate "purge $HOME/sandbox/pass.sh after importing" ;;

  G*) if [ $# -eq 2 ] ;then
        /usr/bin/pass generate --no-symbols --force --clip $2 12
        pass $2
      else
        usage
      fi ;;

  g*) if [ $# -eq 2 ] ;then
        /usr/bin/pass generate --force --clip $2 12
        pass $2
      else
        usage
      fi ;;

  I*) if-no 'initialize password store' && exit 1
      [ -d $store ] && mv -fv $store $store.save
      /usr/bin/pass init sdothum@gmail.com
      annotate 'import (rebuild) your password store' ;;

  i*) if [ $# -eq 3 ] ;then
        ditto "importing $2"
        echo "$3\n$3" >/tmp/pass
        /usr/bin/pass insert --force $2 </tmp/pass >>/tmp/pass.log 2>&1
      else
        usage
      fi ;;

  l*) shift && /usr/bin/pass $@ ;;

  m*) if [ $# -eq 3 ] ;then
        /usr/bin/pass mv --force $2 $3
        pass $3
      else
        usage
      fi ;;

  R*) if [ $# -eq 2 ] ;then
        /usr/bin/pass rm --recursive --force $2
      else
        usage
      fi ;;

  *) if [ $# -eq 1 ] ;then
       if password=$(/usr/bin/pass $1) ;then
         # interactive mode?
         if ps -ef | grep $PPID | grep $SHELL ;then
           [ -e $HOME/.password-store/username/${1#*/}.gpg ] && username=$(/usr/bin/pass username/${1#*/}) ||
                                                                username=$(/usr/bin/pass username/default)
           echo "$username\n$password"
           notify $1 "$username\n$password"
           /usr/bin/pass --clip $1
         else
           echo "$password"
         fi
       else
         usage
       fi
     else
       usage
     fi ;;
esac

# vim: set ft=sh: #
