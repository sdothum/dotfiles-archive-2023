#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Sysadmin
# ══════════════════════════════════════════════════════════════════════════════

# ................................................................... Du wrapper

case $1 in
  '' | .) dir=$PWD ;;
  *     ) dir=$1 ;;
esac

# display du and corrected btrfs du
/usr/bin/du -d1 -h $dir 2>/dev/null
if [ -e /usr/bin/btrfs ] && server ;then
  echo
  sudo btrfs filesystem du -s $dir
fi

# vim: set ft=sh: #
