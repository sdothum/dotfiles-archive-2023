#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Sysadmin
# ══════════════════════════════════════════════════════════════════════════════

# ................................................................ Btrfs wrapper

usage() { echo "usage: $(basename $0) balance | <command>"; exit 1; }

# butterfs :-)
case $@ in
  ''     ) sudo /usr/bin/btrfs filesystem show --all-devices
           sudo /usr/bin/btrfs subvolume list -p /
           echo
           usage ;;
  
  balance) sudo /usr/bin/btrfs balance start -v -dusage=55 / ;;
  *      ) sudo /usr/bin/btrfs $@ ;;
esac

# vim: set ft=sh: #
