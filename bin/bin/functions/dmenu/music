# X11 Dynamic Menu
# ══════════════════════════════════════════════════════════════════════════════

# ........................................................................ Music

# unset redundant for short album menus
# redundant=true

PLAYER='player'
ALBUMS='albums'
ARTIST='artist'
LIBRARY='select library'
ALL='all'

# ...................................................................... Library

# library listings
catlg() { mpc list $1 | sort -n; }

artists() {
  if [ $(mpc playlist | wc -l) -gt 0 ] ;then
    catlg artist | sed "1i$(X $PLAYER)\n$(X $ALBUMS)\n$(X $LIBRARY)"
  else
    catlg artist | sed "1i$(X $ALBUMS)\n$(X $LIBRARY)"
  fi
}

albums() {
  if [ "${artist#$(X)}" = "$ALBUMS" ] ;then
    # redundant menu return to artist listings
    if [ $redundant ] ;then
      if [ $(mpc playlist | wc -l) -gt 0 ] ;then
        catlg album | sed "1i$(X $PLAYER)\n$(X $ARTIST)\n$(X $LIBRARY)"
      else
        catlg album | sed "1i$(X $ARTIST)\n$(X $LIBRARY)"
      fi
    else
      # escape return to artist listings
      if [ $(mpc playlist | wc -l) -gt 0 ] ;then
        catlg album | sed "1i$(X $PLAYER)\n$(X $LIBRARY)"
      else
        catlg album | sed "1i$(X $LIBRARY)"
      fi
    fi
  else
    mpc list album artist "$artist"
  fi
}

# ............................................................. Playback control

# playlist
current()  { mpc current; }
next()     { track=$(mpc playlist | grep -A 1 "$(current)" | grep -v "$(current)"); [ "$track" ] && echo "  $track"; }
previous() { track=$(mpc playlist | grep -B 1 "$(current)" | grep -v "$(current)"); [ "$track" ] && echo "  $track"; }
tracks()   { echo $@ | sed -r 's,.*#([0-9]*)/([0-9]*) .*  ,\1 of \2,'; }
info()     { stats=$(mpc status | sed -n '2p'); echo $stats | grep -q playing && echo "Playing $(tracks $stats)" || echo "Paused $(tracks $stats)"; }
status()   { mpc status | grep -q "$@" && echo off || echo on; }  # toggle status
ncmpcpp()  { pstat ncmpcpp || term 'music' ncmpcpp; exec focus instance 'Music'; }

# ....................................................................... Player

controls () { echo "toggle $(status '\[playing\]')\nnext^$(next)\nrewind^▷ $(current)\nprevious^$(previous)\nrandom $(status 'random: on')\nrepeat $(status 'repeat: on')\nlibrary\nclear" | column -s^ -t; }

# outer loop by library listing
mpc list artist >/dev/null 2>&1 || exit
# player controls on entry
[ "$(current)" != '' ] && artist="$PLAYER"  # cannot compare to null string
while : ;do
  [ "${artist#$(X)}" = "$PLAYER" ] || artist=$(artists | rmenu 'Artist' "$artist" -no-custom) || exit
  if [ "${artist#$(X)}" = "$PLAYER" ] ;then
    unset artist
    while cmd=$(controls | rmenu "$(info)" "${cmd%% *}" -no-custom) || break ;do
      case $cmd in
      toggle*on   |\
      toggle*off) mpc toggle; [ $(status '\[playing\]') = off ] || exit ;;

      next*     ) mpc play; mpc next ;;
      rewind*   ) mpc play; mpc prev; mpc next ;;
      previous* ) mpc play; mpc prev ;;

      random*on   |\
      random*off) mpc play; mpc random ;;

      repeat*on   |\
      repeat*off) mpc play; mpc repeat ;;

      library   ) ncmpcpp ;;
      clear     ) mpc clear; rm -f $MUSIC; exit ;;
      esac
      continue
    done
    continue
  fi

  # inner loop by artist
  more=true
  while [ $more ] ;do
    if [ $(albums | wc -l) -gt 1 ] ;then
      case ${artist#$(X)} in
      "$ALBUMS") album=$(albums | rmenu 'Album' "$album" -no-custom) || break ;;
      *        ) album=$(albums | sort -n | sed "1i$(X $ALL)\n$(X $LIBRARY)" | rmenu 'Album' "$album" -no-custom) || break ;;
      esac
    else
      case ${artist#$(X)} in
      "$LIBRARY") album=$artist ;;
      *         ) album=$(albums | sort -n | rmenu 'Album' "$album" -no-custom) || break; unset more ;;
      esac
    fi

    # player, library or playlist selection
    case ${album#$(X)} in
    "$PLAYER" ) artist="$PLAYER"; break ;;
    "$ARTIST" ) break ;;
    "$LIBRARY") ncmpcpp ;;
    "$ALL"    ) playlist=$(mpc find artist "$artist"); music="All songs by $artist"; unset more ;;

    *         ) case ${artist#$(X)} in
                "$ALBUMS") playlist=$(mpc find album "$album"); music=$album ;;
                *        ) playlist=$(mpc find artist "$artist" album "$album"); music="$album by $artist" ;;
                esac ;;
    esac

    # playlist action
    while action=$(echo 'play\nadd\ninsert' | rmenu "$music" -no-custom) || break ;do
      case $action in
      play  ) mpc clear >/dev/null; echo "$playlist" | mpc add >/dev/null; mpc play; exec echo "$playlist" >$MUSIC ;;
      add   ) echo "$playlist" | mpc add >/dev/null ;;
      insert) echo "$playlist" | mpc insert >/dev/null ;;
      esac
      break
    done
    mpc play >/dev/null
  done
done

# vim: set ft=sh: #
