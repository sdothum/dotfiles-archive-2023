#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Network
# ══════════════════════════════════════════════════════════════════════════════

# ....................................................... Network daemon control

usage() { echo "usage: $(basename $0) stop | start"; exit 1; }

daemons='
  avahi-daemon
  bitlbee
  cronie
  dnsmasq
  gssproxy
  nfs-server
  nginx
  ntpd
  nzbget@shum
  org.cups.cupsd
  php-fpm
  sonarr
  squid
  sshd
  syncthing@shum
  tt-rss
  znc
'

sv() { for i in $daemons ;do ditto $i; service $1 $i ;done }

case $1 in
stop ) sv stop
       killall conky
       killall lemonbar
       killall offlineimap
       sudo chattr -i /etc/resolv.conf
       sudo cp /etc/resolv.google.conf /etc/resolv.conf ;;

start) sudo cp /etc/resolv.dnsmasq.conf /etc/resolv.conf
       sudo chattr +i /etc/resolv.conf
       sv start
       conky
       draw panel ;;

*    ) usage ;;
esac

# vim: set ft=sh: #
