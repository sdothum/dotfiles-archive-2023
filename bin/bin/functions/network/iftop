# ...................................................................... Monitor

alpine && BIN=/usr/sbin || BIN=/usr/bin

# monitor interface
ditto "iftop -B -i ${1:-wlan0} \ (eth0, wlan0, ..)"
sudo $BIN/iftop -B -i ${1:-wlan0}

