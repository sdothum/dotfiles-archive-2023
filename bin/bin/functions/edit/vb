#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Edit
# ══════════════════════════════════════════════════════════════════════════════

# ....................................................................... Editor

usage() { echo "usage: $(basename $0) '<match>' '[:]<command>'"; exit 1; }

[ $# -eq 2 ] || usage
[ -n "$1"  ] || usage
[ -n "$2"  ] || usage

# batch vim edit (using vim vs vi to preserve edit history)
for i in $(al "$1") ;do
  ditto vim "$i"
  vim -c "$2" -c 'wq' "$i"
done

# vim: set ft=sh: #
